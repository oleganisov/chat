<div class="wrapper">
    <div class="controls">
        <a href="#" class="controls__link" id="link_minimize">
            <div class="controls__minimize"></div>
        </a>
        <a href="#" class="controls__link" id="link_maximize">
            <div class="controls__maximize"></div>
        </a>
        <a href="#" class="controls__link" id="link_close">
            <div class="controls__close"></div>
        </a>
    </div>
    <div class="main">
        <div class="panel__left panel__left_active">
            <div class="nav">
                <a href="#" class="nav__link">
                    <div class="nav__bar"></div>
                </a>
                <input type="text" class="nav__search active_display" placeholder="Найти...">
            </div>
            <div class="users active_display">
                <ul class="users__list">
                    <li class="users__item">
                        <div class="avatar users__avatar">
                            <div class="avatar__pic pic_small"><img src="../../assets/img/avatar_small.png" alt=""
                                    class="avatar__img" id="myAvatar">
                            </div>
                            <div class="avatar__desc">
                                <div class="avatar__title title_small">
                                    <h3>
                                        Алексей Трубин
                                    </h3>
                                </div>
                                <div class="avatar__info info_small">Привет</div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="panel__right chat">
            <div class="chat__header">
                <div class="chat__descr">
                    <h3 class="chat__title">Чат</h3>
                    <div class="chat__info">2 участника</div>
                </div>
                <input type="file" class="chat__photo" id="chatPhoto" accept="image/jpeg,image/jpg,image/png">
                <label class="chat__label" for="chatPhoto" title="Выберите фото">
                    <div class="chat__pic">
                        <img src="../../assets/img/photo-camera.png" alt="camera">
                    </div>
                </label>
            </div>
            <div class="chat__box">
                <ul class="chat__list"></ul>
            </div>
            <form class="chat__form" id="chatForm">
                <textarea name="message" id="" cols="30" rows="10" class="chat__msg"
                    placeholder="Введите сообщение..."></textarea>
                <button class="button_blue chat__send">Отправить</button>
            </form>
        </div>
    </div>
</div>